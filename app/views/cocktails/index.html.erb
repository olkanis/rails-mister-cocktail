<div class="container">
<h1>Cocktails</h1>

<ul>
<% @cocktails.each do |cocktail| %>
  <li><%= link_to cocktail.name, cocktail_path(cocktail), :class => "link_to" %></li>
  <% end %>
</ul>

<p><i class="fas fa-cocktail"></i><%= link_to "Add a cocktail", new_cocktail_path, :class => "link" %></p>
</div>
